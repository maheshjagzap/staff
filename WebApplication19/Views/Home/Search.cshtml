@model IEnumerable<WebApplication19.Models.disp>

@{
    ViewBag.Title = "Search Data";
}
<center>

    <div calss="main">
        <div class="search-container">
            <h2>Search</h2>

            @using (Html.BeginForm("Search", "Home"))
            {
                <div class="form-group">
                    <label>Search By:</label><br />
                    <div class="form-check">
                        <input type="radio" name="SearchBy" value="name" id="searchByName" class="form-check-input" checked />
                        <label for="searchByName" class="form-check-label">Name</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" name="SearchBy" value="Email" id="searchByEmail" class="form-check-input" />
                        <label for="searchByEmail" class="form-check-label">Email</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="search_data">Enter search term:</label>
                    <input type="text" name="search_data" class="form-control" placeholder="Enter search term" required />
                </div>

                <button type="submit" class="btn btn-primary">Search</button>
            }
        </div>
</center>

<!-- Display search results -->
@if (Model != null && Model.Any())
{
    <h3>Search Results</h3>

    <table border="2" class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Username</th>
            <th>Gmail</th>
            <th>Mobile Number</th>
            <th>Password</th>
            <th>Confirm Password</th>
            <th>Age</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.UName</td>
                <td>@x.Username</td>
                <td>@x.Usergmail</td>
                <td>@x.MoNumber</td>
                <td>@x.UPassword</td>
                <td>@x.ConfirmPassword</td>
                <td>@x.Age</td>
            </tr>
        }
    </table>
}
else
{
    <p class="alert alert-warning">Not Found</p>
}
    }

